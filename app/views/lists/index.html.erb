<div class="banner">
  <div class="container">
    <h1>Create your custom lists with your favorite movies!</h1>
  </div>
</div>
<div class="container">
<div class="title-container">
  <h2>My lists</h2>
  <%= link_to "Create a movie list", new_list_path(@list), class: "btn btn-flat" %>
</div>
  <div class="grid-container">
      <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <p><%= link_to list.name, list_path(list) %></p></div>
      <% end %>
    </div>
  </div>
</div>
